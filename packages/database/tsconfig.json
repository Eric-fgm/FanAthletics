{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"module": "CommonJS",
		"declaration": true,
		"types": ["node"],
		"outDir": "dist"
	},
	"exclude": ["node_modules", "dist"]
}
