{
	"name": "@fan-athletics/database",
	"version": "1.0.0",
	"type": "module",
	"files": ["dist/**/*"],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"type-check": "tsc --noEmit",
		"clean": "rm -rf node_modules & rm -rf dist",
		"db:studio": "drizzle-kit studio",
		"db:reset": "pnpm build && rm -rf ./drizzle && node ./dist/clear-db.js && drizzle-kit generate && drizzle-kit migrate && node ./dist/seed.js"
	},
	"dependencies": {
		"dotenv": "^16.5.0",
		"drizzle-orm": "^0.44.2",
		"pg": "^8.16.0"
	},
	"devDependencies": {
		"@types/node": "^22.15.21",
		"@types/pg": "^8.15.2",
		"drizzle-kit": "^0.31.1",
		"ts-node": "^10.9.2",
		"typescript": "5.8.3"
	}
}
