{
	"name": "api",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"start": "node dist/index.js",
		"build": "esbuild src/index.ts --bundle --platform=node --outdir=dist",
		"dev": "concurrently -k -n BUILD,SERVER -c yellow,cyan \"esbuild --watch --sourcemap src/index.ts --bundle --platform=node --outdir=dist\" \"node --watch dist/index.js\"",
		"type-check": "tsc --noEmit",
		"clean": "rm -rf node_modules & rm -rf dist"
	},
	"dependencies": {
		"@better-auth/expo": "^1.2.8",
		"@fan-athletics/ai": "workspace:*",
		"@fan-athletics/database": "workspace:*",
		"@fan-athletics/emailer": "workspace:*",
		"@fan-athletics/shared": "workspace:*",
		"@hono/node-server": "^1.14.2",
		"better-auth": "^1.2.8",
		"csv-parser": "^3.2.0",
		"dotenv": "^16.5.0",
		"hono": "^4.7.10"
	},
	"devDependencies": {
		"@types/node": "^22.15.21",
		"concurrently": "^9.2.0",
		"esbuild": "^0.25.6",
		"typescript": "5.8.3"
	}
}
